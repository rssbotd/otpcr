#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0413,W0212


"service"


import getpass


from otpcr.errors  import errors
from otpcr.main    import Config, forever, initer, pidfile, privileges, wrap
from otpcr.modules import face


Cfg = Config()
Cfg.user = getpass.getuser()
Cfg.mod = "cmd,err,mod,irc,rss,thr"


def main():
    "main"
    privileges(Cfg.user)
    pidfile(Cfg.pidfile)
    initer(Cfg.mod, face)
    forever()


def wrapper():
    "Wrap main."
    wrap(main)
    errors(print)


if __name__ == "__main__":
    wrapper()
